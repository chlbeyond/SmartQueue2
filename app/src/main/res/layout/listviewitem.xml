<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176px"
        android:background="@mipmap/item_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="70px"
            android:gravity="center"
            android:text="A15"
            android:textColor="#02A2D6"
            android:textSize="50px" />

        <LinearLayout
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_peplecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:text="5人"
                android:textColor="#818181"
                android:textSize="35px" />

            <TextView
                android:id="@+id/textView_phonenumber"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:text="15912345678"
                android:gravity="center_horizontal"
                android:textColor="#818181"
                android:textSize="35px" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:gravity="center"
            android:text="10000分钟"
            android:textColor="#818181"
            android:textSize="35px" />

        <View
            android:id="@+id/textView1"
            android:layout_width="2px"
            android:layout_height="70px"
            android:layout_marginLeft="59px"
            android:background="#dadfe3"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/LinearLayout_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="59px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginTop="20px"
                android:background="@mipmap/call"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/textView_call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="叫号"
                android:textColor="#101010"
                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_meal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="81px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView_meal"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginTop="20px"
                android:background="@mipmap/repass"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/textView_meall_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="就餐"
                android:textColor="#101010"
                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_beused"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="81px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView_beused"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginTop="20px"
                android:background="@mipmap/pass"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/textView_beused_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="过号"
                android:textColor="#101010"
                android:textSize="32px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>