<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/changePassword_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="30px"
            android:src="@mipmap/group_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:text="修改密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />

    <LinearLayout
        android:id="@+id/shopSet_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="30px"
            android:src="@mipmap/group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门店设置"
            android:layout_marginLeft="14px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />


    <LinearLayout
        android:id="@+id/printSet_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="30px"
            android:src="@mipmap/group_2" />

        <TextView
            android:id="@+id/textView_left_menu_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印机信息"
            android:layout_marginLeft="14px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />


    <LinearLayout
        android:id="@+id/emptyQueue_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="30px"
            android:src="@mipmap/group_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空排队数据"
            android:layout_marginLeft="14px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />

    <LinearLayout
        android:id="@+id/switch_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:src="@mipmap/switch_btn"
            app:layout_auto_basewidth="height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:text="横竖屏切换" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />

    <LinearLayout
        android:id="@+id/logout_ll"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/drawerlayout_menu"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="30px"
            android:src="@mipmap/group_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:layout_marginLeft="14px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15px"
        android:background="#DFE0E1" />

</LinearLayout>